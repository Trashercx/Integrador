    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/RegistroServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompraServlet</servlet-name>
        <url-pattern>/CompraServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CatalogoEventosServlet</servlet-name>
        <url-pattern>/CatalogoEventosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Descripción</servlet-name>
        <url-pattern>/Descripci_n</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Descripciónservlet</servlet-name>
        <url-pattern>/Descripci_nservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Detalle_eventoservlet</servlet-name>
        <url-pattern>/Detalle_eventoservlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <description>Database Connection</description>
        <res-ref-name>jdbc/YourDataSource</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
